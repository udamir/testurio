{
  "name": "testurio",
  "version": "0.4.0",
  "description": "Declarative E2E/integration testing framework for distributed systems with multi-protocol support (HTTP, gRPC, WebSocket, TCP)",
  "keywords": [
    "testing",
    "e2e",
    "integration",
    "http",
    "grpc",
    "websocket",
    "tcp",
    "mock",
    "proxy",
    "declarative",
    "typescript",
    "distributed-systems"
  ],
  "author": "Damir Yusipov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udamir/testurio.git",
    "directory": "packages/core"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "test": "vitest run",
    "lint": "biome check src",
    "lint:fix": "biome check --write .",
    "prepublish": "npm pkg set version=$(node -p \"require('../../package.json').version\") && pnpm run lint && pnpm run test && pnpm run build && cp ../../README.md ../../CHANGELOG.md ./dist/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^24.10.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  }
}

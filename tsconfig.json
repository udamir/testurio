{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2019",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true,
    "allowJs": true,
    "removeComments": false,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "types"],

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "testurio": ["./packages/core/src"],
      "@testurio/protocol-grpc": ["./packages/protocol-grpc/src"],
      "@testurio/protocol-ws": ["./packages/protocol-ws/src"],
      "@testurio/protocol-tcp": ["./packages/protocol-tcp/src"],
      "@testurio/adapter-kafka": ["./packages/adapter-kafka/src"],
      "@testurio/adapter-mongo": ["./packages/adapter-mongo/src"],
      "@testurio/adapter-pg": ["./packages/adapter-pg/src"],
      "@testurio/adapter-rabbitmq": ["./packages/adapter-rabbitmq/src"],
      "@testurio/adapter-redis": ["./packages/adapter-redis/src"],
      "@testurio/reporter-allure": ["./packages/reporter-allure/src"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}